  <style name="drawer_header_style">
    <item name="android:background">@drawable/background_material</item>
  </style>

  <style name="drawer_header_title_style">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:textStyle">bold</item>
