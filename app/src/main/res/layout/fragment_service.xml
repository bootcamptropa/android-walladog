<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    tools:context="com.walladog.walladog.controller.fragments.ServiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/primary_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_service_title"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Titulo Servicio"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:background="@color/primary_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:padding="2pt"
        android:id="@+id/img_service3"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        app:border="true"
        android:src="@drawable/walladogsmall"
        app:border_color="@android:color/white"
        android:elevation="15dp"
        app:border_width="1dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/txt_service_description"
        android:text="@string/dumy_text"
        android:layout_height="fill_parent"/>


</LinearLayout>

