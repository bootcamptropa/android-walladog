<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        tools:context="com.walladog.walladog.controller.fragments.ServiceFragment">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txt_service_title"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/background_service1"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Titulo Servicio"
            android:layout_marginTop="5dp"
            />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:padding="2pt"
            android:id="@+id/img_service3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            app:border="true"
            android:src="@drawable/walladogsmall"
            app:border_color="@android:color/holo_blue_dark"
            android:elevation="15dp"
            app:border_width="1dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/background_service1"
            android:id="@+id/txt_service_description"
            android:text="@string/dumy_text"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <FrameLayout
        android:animateLayoutChanges="true"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressService"
        android:visibility="gone"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLargeInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progress_bar_draw"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:progressTint="#ffffba27"
            android:secondaryProgressTint="#ffff1e25" />

    </FrameLayout>




</RelativeLayout>
