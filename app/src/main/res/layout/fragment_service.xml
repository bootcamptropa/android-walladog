<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.walladog.walladog.controller.fragments.ServiceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txt_service_title"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Titulo Servicio"
            android:layout_marginTop="20dp"
            android:capitalize="words"/>


        <com.mikhaellopez.circularimageview.CircularImageView
            android:padding="2pt"
            android:id="@+id/img_service3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerInside"
            app:border="true"
            android:src="@drawable/walladogsmall"
            app:border_color="@android:color/white"
            app:border_width="1dp"
            android:layout_below="@+id/txt_service_title"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/txt_service_description"
            android:layout_below="@+id/img_service3"
            android:text="@string/dumy_text"
            android:layout_height="fill_parent"/>


    </RelativeLayout>


</FrameLayout>
