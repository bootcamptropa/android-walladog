<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailScroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:id="@+id/viewpager"
                                           android:layout_width="match_parent"
                                           android:layout_height="200dp" />
        <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/titles"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:strokeWidth="5dp"
            app:lineWidth="15dp"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/primary_color"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/wd_grey_bg"
                    android:padding="1dp"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/wd_grey_bg"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:text="Raza:"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/wd_grey_bg"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:text="Localidad:"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/wd_grey_bg"
                    android:padding="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Esterilizado:"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:padding="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dog_name"
                    android:text="@string/txt_dog_noname"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:padding="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dog_race"
                    android:text="@string/txt_dog_norace"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:padding="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dog_location"
                    android:text="@string/txt_unknown"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:padding="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dog_sterile"
                    android:text="@string/txt_unknown"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="2dp"
            android:background="@drawable/description_product_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textStyle="bold"
                android:text="Datos del Vendedor:"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:padding="2dp"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1dp"
                    android:src="@drawable/personsample3"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_product_owner_name"
                        android:layout_gravity="center_vertical"
                        android:text="Ramon Alberti Danes"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_product_owner_location"
                        android:layout_gravity="center_vertical"
                        android:text="Barcelona"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="2dp"
            android:background="@drawable/description_product_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textStyle="bold"
                android:text="Información:"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:id="@+id/description_product"
                android:text="Eh! este es Boby, un perro de raza labrador super agradable cariñoso y de 3 meses, esta buscando un hogar donde lo cuiden y lo amen, te animas ?"
                />
        </LinearLayout>

        <fragment
            android:id="@+id/mapFragment"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            class="com.walladog.walladog.utils.WorkaroundMapFragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="2dp"
            android:background="@drawable/description_product_background"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/txt_product_others"
                android:text="Otros productos de Ramón"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:padding="2dp"
                >
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1dp"
                    android:id="@+id/extra_product1"
                    android:src="@drawable/walladogsmall"
                    android:layout_gravity="center"
                    />
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1dp"
                    android:id="@+id/extra_product2"
                    android:src="@drawable/walladogsmall"
                    android:layout_gravity="center"
                    />
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1dp"
                    android:id="@+id/extra_product3"
                    android:src="@drawable/walladogsmall"
                    android:layout_gravity="center"
                    />
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1dp"
                    android:id="@+id/extra_product4"
                    android:src="@drawable/walladogsmall"
                    android:layout_gravity="center"
                    />
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1dp"
                    android:id="@+id/extra_product5"
                    android:src="@drawable/walladogsmall"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/wd_base"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Walladog 2015 SL"
                android:textColor="@color/wd_white"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>