<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container_inner_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_margin="1dp"
              android:background="@drawable/background_item_notification"
              android:orientation="horizontal">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_grid"
        android:layout_weight="0"
        android:src="@drawable/walladogsmall"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/notification_title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:text="@string/notification_date"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wd_white"
            android:id="@+id/txt_noti_title"
            android:text="Nombre Producto"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wd_white"
            android:layout_marginTop="1dp"
            android:id="@+id/txt_noti_date"
            android:text="Fecha publicaciÃ³n"
            />

    </LinearLayout>



</LinearLayout>