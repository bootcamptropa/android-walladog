<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_height="wrap_content"
                  android:id="@+id/main_linear"
                  android:layout_width="match_parent"
                  android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:background="@color/wd_white"
                                               android:id="@+id/view_pager">
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/btn_enventa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corners"
            android:textSize="12sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_menu_cartwhite"
            android:paddingTop="3dp"
            android:layout_margin="5dp"
            android:textColor="@color/wd_white"
            android:elevation="5dp"
            android:text="EN VENTA"/>
        <Button
            android:id="@+id/btn_vendido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corners"
            android:textSize="12sp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/ic_menu_vendido"
            android:textColor="@color/wd_grey"
            android:elevation="5dp"
            android:text="VENDIDO"/>
        <Button
            android:id="@+id/btn_busquedas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/btn_corners"
            android:textSize="12sp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_menu_searchwhite2"
            android:paddingTop="3dp"
            android:layout_margin="5dp"
            android:textColor="@color/wd_grey"
            android:elevation="5dp"
            android:text="BUSQUEDAS"/>

    </LinearLayout>

</RelativeLayout>